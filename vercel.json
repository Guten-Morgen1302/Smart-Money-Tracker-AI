
{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist/public"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/ai/query",
      "destination": "server/index.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "server/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "dist/public/$1"
    }
  ]
}
